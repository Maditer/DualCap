<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp"
    android:paddingStart="4dp"
    android:paddingEnd="4dp">

    <!-- 拖拽手柄 - 移到最左边 -->
    <ImageView
        android:id="@+id/drag_handle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="拖拽排序"
        android:padding="8dp"
        android:alpha="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/drag" />

    <!-- 功能图标 - 使用提供的 SVG -->
    <ImageView
        android:id="@+id/feature_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:contentDescription="功能图标"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/drag_handle"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_feature_main" />

    <!-- 功能名称 -->
    <TextView
        android:id="@+id/feature_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textSize="15sp"
        android:textColor="@color/primary_text"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toStartOf="@id/feature_switch"
        app:layout_constraintStart_toEndOf="@id/feature_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- 功能开关 -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/feature_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:track="@drawable/switch_track"
        app:thumbTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>